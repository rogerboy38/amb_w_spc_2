{
    "doctype": "DocType",
    "name": "spc_change_control",
    "module": "fda_compliance",
    "custom": 1,
    "istable": 1,
    "track_changes": 1,
    "description": "Child table for change controls applied during batch production",
    "fields": [
        {
            "fieldname": "change_control_number",
            "fieldtype": "Data",
            "label": "Change Control Number",
            "reqd": 1,
            "in_list_view": 1,
            "description": "Unique change control identifier"
        },
        {
            "fieldname": "change_description",
            "fieldtype": "Small Text",
            "label": "Change Description",
            "reqd": 1,
            "in_list_view": 1,
            "description": "Description of the change implemented"
        },
        {
            "fieldname": "change_type",
            "fieldtype": "Select",
            "label": "Change Type",
            "options": "Temporary\nPermanent\nEmergency",
            "reqd": 1,
            "in_list_view": 1,
            "description": "Type of change control"
        },
        {
            "fieldname": "approval_status",
            "fieldtype": "Select",
            "label": "Approval Status",
            "options": "Pending\nApproved\nRejected",
            "default": "Approved",
            "description": "Current approval status"
        }
    ],
    "app": "amb_w_spc",
    "title": "SPC Change Control"
}